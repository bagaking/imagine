{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["chrome", "node"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node"
  },
  "include": ["src"]
}
